<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profil - Facebook Clone</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="css/styles.css" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'facebook-blue': '#1877F2',
                        'facebook-dark': '#166FE5',
                        'facebook-gray': '#E4E6EA',
                        'facebook-dark-gray': '#8A8D91'
                    }
                }
            }
        }
    </script>
</head>

<body class="bg-gray-100">
    <!-- Navigation Bar -->
    <nav class="bg-white shadow-sm border-b border-gray-200 sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4">
            <div class="flex justify-between items-center h-14">
                <!-- Logo et Recherche -->
                <div class="flex items-center space-x-4">
                    <a href="index.html" class="text-facebook-blue text-2xl font-bold">
                        <i class="fab fa-facebook"></i>
                    </a>
                    <div class="hidden md:block">
                        <div class="relative">
                            <input type="text" placeholder="Rechercher sur Facebook"
                                class="bg-gray-100 rounded-full pl-10 pr-4 py-2 w-64 focus:outline-none focus:bg-white focus:shadow-md">
                            <i class="fas fa-search absolute left-3 top-3 text-gray-500"></i>
                        </div>
                    </div>
                </div>

                <!-- Navigation centrale -->
                <div class="hidden md:flex space-x-8">
                    <a href="index.html" class="text-gray-600 hover:text-facebook-blue pb-3">
                        <i class="fas fa-home text-xl"></i>
                    </a>
                    <a href="#" class="text-gray-600 hover:text-facebook-blue pb-3">
                        <i class="fas fa-users text-xl"></i>
                    </a>
                    <a href="#" class="text-gray-600 hover:text-facebook-blue pb-3">
                        <i class="fas fa-tv text-xl"></i>
                    </a>
                    <a href="#" class="text-gray-600 hover:text-facebook-blue pb-3">
                        <i class="fas fa-store text-xl"></i>
                    </a>
                    <a href="#" class="text-gray-600 hover:text-facebook-blue pb-3">
                        <i class="fas fa-gamepad text-xl"></i>
                    </a>
                </div>

                <!-- Menu utilisateur -->
                <div class="flex items-center space-x-2">
                    <button class="bg-gray-100 rounded-full p-2 hover:bg-gray-200">
                        <i class="fas fa-plus"></i>
                    </button>
                    <button class="bg-gray-100 rounded-full p-2 hover:bg-gray-200">
                        <i class="fab fa-facebook-messenger"></i>
                    </button>
                    <button class="bg-gray-100 rounded-full p-2 hover:bg-gray-200">
                        <i class="fas fa-bell"></i>
                    </button>
                    <button class="bg-gray-100 rounded-full p-2 hover:bg-gray-200">
                        <i class="fas fa-user-circle text-xl"></i>
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <!-- Profil Header -->
    <div class="bg-white">
        <div class="max-w-6xl mx-auto">
            <!-- Photo de couverture -->
            <div class="h-80 bg-gradient-to-r from-blue-400 to-purple-500 relative">
                <button
                    class="absolute bottom-4 right-4 bg-white text-gray-700 px-4 py-2 rounded-lg shadow hover:bg-gray-100">
                    <i class="fas fa-camera mr-2"></i>
                    Modifier la couverture
                </button>
            </div>

            <!-- Informations du profil -->
            <div class="px-6 pb-4">
                <div class="flex flex-col md:flex-row md:items-end md:justify-between -mt-20 md:-mt-16">
                    <div class="flex flex-col md:flex-row md:items-end md:space-x-6">
                        <!-- Photo de profil -->
                        <div class="relative mb-4 md:mb-0">
                            <div
                                class="w-40 h-40 bg-gray-300 rounded-full border-4 border-white flex items-center justify-center text-6xl text-gray-600">
                                <i class="fas fa-user"></i>
                            </div>
                            <button class="absolute bottom-2 right-2 bg-gray-200 rounded-full p-2 hover:bg-gray-300">
                                <i class="fas fa-camera text-gray-600"></i>
                            </button>
                        </div>

                        <!-- Nom et infos -->
                        <div class="text-center md:text-left mb-4 md:mb-0">
                            <h1 class="text-3xl font-bold text-gray-900">Votre Nom</h1>
                            <p class="text-gray-600 text-lg">1,234 amis</p>
                            <div class="flex justify-center md:justify-start space-x-2 mt-2">
                                <div class="flex -space-x-2">
                                    <div class="w-8 h-8 bg-gray-300 rounded-full border-2 border-white"></div>
                                    <div class="w-8 h-8 bg-gray-400 rounded-full border-2 border-white"></div>
                                    <div class="w-8 h-8 bg-gray-500 rounded-full border-2 border-white"></div>
                                    <div class="w-8 h-8 bg-gray-600 rounded-full border-2 border-white"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Boutons d'actions -->
                    <div class="flex space-x-3">
                        <button
                            class="bg-facebook-blue text-white px-6 py-2 rounded-lg font-semibold hover:bg-facebook-dark">
                            <i class="fas fa-plus mr-2"></i>
                            Ajouter à la story
                        </button>
                        <button class="bg-gray-200 text-gray-700 px-6 py-2 rounded-lg font-semibold hover:bg-gray-300">
                            <i class="fas fa-edit mr-2"></i>
                            Modifier le profil
                        </button>
                    </div>
                </div>

                <!-- Navigation du profil -->
                <div class="border-t border-gray-200 mt-6">
                    <nav class="flex space-x-8 mt-4">
                        <a href="#" class="pb-2 px-1 border-b-2 border-facebook-blue text-facebook-blue font-semibold">
                            Publications
                        </a>
                        <a href="#" class="pb-2 px-1 text-gray-600 hover:text-facebook-blue font-semibold">
                            À propos
                        </a>
                        <a href="#" class="pb-2 px-1 text-gray-600 hover:text-facebook-blue font-semibold">
                            Amis
                        </a>
                        <a href="#" class="pb-2 px-1 text-gray-600 hover:text-facebook-blue font-semibold">
                            Photos
                        </a>
                        <a href="#" class="pb-2 px-1 text-gray-600 hover:text-facebook-blue font-semibold">
                            Vidéos
                        </a>
                        <a href="#" class="pb-2 px-1 text-gray-600 hover:text-facebook-blue font-semibold">
                            Plus
                        </a>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <!-- Contenu du profil -->
    <div class="max-w-6xl mx-auto py-6 px-4">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Colonne gauche - Informations -->
            <div class="lg:col-span-1">
                <!-- À propos -->
                <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
                    <h2 class="text-xl font-bold mb-4">À propos</h2>
                    <div class="space-y-4">
                        <div class="flex items-center space-x-3">
                            <i class="fas fa-briefcase text-gray-500"></i>
                            <span>Travaille chez <strong>Entreprise</strong></span>
                        </div>
                        <div class="flex items-center space-x-3">
                            <i class="fas fa-graduation-cap text-gray-500"></i>
                            <span>A étudié à <strong>Université</strong></span>
                        </div>
                        <div class="flex items-center space-x-3">
                            <i class="fas fa-home text-gray-500"></i>
                            <span>Habite à <strong>Paris, France</strong></span>
                        </div>
                        <div class="flex items-center space-x-3">
                            <i class="fas fa-map-marker-alt text-gray-500"></i>
                            <span>De <strong>Lyon, France</strong></span>
                        </div>
                        <div class="flex items-center space-x-3">
                            <i class="fas fa-heart text-gray-500"></i>
                            <span>Célibataire</span>
                        </div>
                        <div class="flex items-center space-x-3">
                            <i class="fas fa-calendar text-gray-500"></i>
                            <span>A rejoint en janvier 2020</span>
                        </div>
                    </div>
                    <button class="w-full mt-4 bg-gray-100 text-gray-700 py-2 rounded-lg hover:bg-gray-200">
                        Modifier les détails
                    </button>
                </div>

                <!-- Photos -->
                <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
                    <div class="flex justify-between items-center mb-4">
                        <h2 class="text-xl font-bold">Photos</h2>
                        <a href="#" class="text-facebook-blue hover:underline">Voir toutes les photos</a>
                    </div>
                    <div class="grid grid-cols-3 gap-2">
                        <div class="aspect-square bg-gray-300 rounded-lg"></div>
                        <div class="aspect-square bg-gray-400 rounded-lg"></div>
                        <div class="aspect-square bg-gray-500 rounded-lg"></div>
                        <div class="aspect-square bg-gray-600 rounded-lg"></div>
                        <div class="aspect-square bg-gray-700 rounded-lg"></div>
                        <div class="aspect-square bg-gray-800 rounded-lg"></div>
                    </div>
                </div>

                <!-- Amis -->
                <div class="bg-white rounded-lg shadow-sm p-6">
                    <div class="flex justify-between items-center mb-4">
                        <h2 class="text-xl font-bold">Amis</h2>
                        <a href="#" class="text-facebook-blue hover:underline">Voir tous les amis</a>
                    </div>
                    <p class="text-gray-600 mb-4">1,234 amis</p>
                    <div class="grid grid-cols-3 gap-3">
                        <div class="text-center">
                            <div class="w-20 h-20 bg-gray-300 rounded-lg mb-2 mx-auto flex items-center justify-center">
                                <i class="fas fa-user text-gray-600"></i>
                            </div>
                            <p class="text-sm font-medium">Marie</p>
                        </div>
                        <div class="text-center">
                            <div class="w-20 h-20 bg-gray-400 rounded-lg mb-2 mx-auto flex items-center justify-center">
                                <i class="fas fa-user text-gray-600"></i>
                            </div>
                            <p class="text-sm font-medium">Pierre</p>
                        </div>
                        <div class="text-center">
                            <div class="w-20 h-20 bg-gray-500 rounded-lg mb-2 mx-auto flex items-center justify-center">
                                <i class="fas fa-user text-gray-600"></i>
                            </div>
                            <p class="text-sm font-medium">Sophie</p>
                        </div>
                        <div class="text-center">
                            <div class="w-20 h-20 bg-gray-600 rounded-lg mb-2 mx-auto flex items-center justify-center">
                                <i class="fas fa-user text-gray-600"></i>
                            </div>
                            <p class="text-sm font-medium">Julie</p>
                        </div>
                        <div class="text-center">
                            <div class="w-20 h-20 bg-gray-700 rounded-lg mb-2 mx-auto flex items-center justify-center">
                                <i class="fas fa-user text-gray-600"></i>
                            </div>
                            <p class="text-sm font-medium">Thomas</p>
                        </div>
                        <div class="text-center">
                            <div class="w-20 h-20 bg-gray-800 rounded-lg mb-2 mx-auto flex items-center justify-center">
                                <i class="fas fa-user text-gray-600"></i>
                            </div>
                            <p class="text-sm font-medium">Paul</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Colonne droite - Publications -->
            <div class="lg:col-span-2">
                <!-- Créer un post -->
                <div class="bg-white rounded-lg shadow-sm p-4 mb-6">
                    <div class="flex items-center space-x-3 mb-4">
                        <div class="w-10 h-10 bg-gray-300 rounded-full flex items-center justify-center">
                            <i class="fas fa-user text-gray-600"></i>
                        </div>
                        <input type="text" placeholder="Que voulez-vous dire ?"
                            class="flex-1 bg-gray-100 rounded-full px-4 py-2 hover:bg-gray-200 cursor-pointer focus:outline-none">
                    </div>
                    <hr class="mb-4">
                    <div class="flex justify-around">
                        <button
                            class="flex items-center space-x-2 px-4 py-2 hover:bg-gray-100 rounded-lg flex-1 justify-center">
                            <i class="fas fa-video text-red-500"></i>
                            <span class="text-gray-600">Vidéo en direct</span>
                        </button>
                        <button
                            class="flex items-center space-x-2 px-4 py-2 hover:bg-gray-100 rounded-lg flex-1 justify-center">
                            <i class="fas fa-images text-green-500"></i>
                            <span class="text-gray-600">Photo/vidéo</span>
                        </button>
                        <button
                            class="flex items-center space-x-2 px-4 py-2 hover:bg-gray-100 rounded-lg flex-1 justify-center">
                            <i class="fas fa-smile text-yellow-500"></i>
                            <span class="text-gray-600">Humeur/activité</span>
                        </button>
                    </div>
                </div>

                <!-- Publications du profil -->
                <div id="profile-posts">
                    <!-- Post 1 -->
                    <div class="bg-white rounded-lg shadow-sm mb-6">
                        <div class="p-4">
                            <div class="flex items-center space-x-3 mb-4">
                                <div class="w-10 h-10 bg-gray-300 rounded-full flex items-center justify-center">
                                    <i class="fas fa-user text-gray-600"></i>
                                </div>
                                <div>
                                    <p class="font-medium">Votre Nom</p>
                                    <p class="text-sm text-gray-500">Il y a 3 heures</p>
                                </div>
                            </div>

                            <div class="mb-4">
                                <p class="text-gray-800">Belle journée pour se promener dans le parc ! 🌳☀️</p>
                            </div>

                            <!-- Image du post -->
                            <div class="mb-4">
                                <div class="w-full h-64 bg-gradient-to-br from-green-400 to-blue-500 rounded-lg"></div>
                            </div>
                        </div>

                        <!-- Stats -->
                        <div class="px-4 pb-2">
                            <div class="flex justify-between text-sm text-gray-500">
                                <div class="flex items-center space-x-1">
                                    <div class="w-5 h-5 bg-facebook-blue rounded-full flex items-center justify-center">
                                        <i class="fas fa-thumbs-up text-white text-xs"></i>
                                    </div>
                                    <span>42</span>
                                </div>
                                <div>
                                    <span>8 commentaires</span>
                                </div>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="border-t border-gray-200 px-4 py-2">
                            <div class="flex justify-around">
                                <button
                                    class="flex items-center space-x-2 px-4 py-2 hover:bg-gray-100 rounded-lg flex-1 justify-center text-facebook-blue">
                                    <i class="fas fa-thumbs-up"></i>
                                    <span>J'aime</span>
                                </button>
                                <button
                                    class="flex items-center space-x-2 px-4 py-2 hover:bg-gray-100 rounded-lg flex-1 justify-center text-gray-600">
                                    <i class="fas fa-comment"></i>
                                    <span>Commenter</span>
                                </button>
                                <button
                                    class="flex items-center space-x-2 px-4 py-2 hover:bg-gray-100 rounded-lg flex-1 justify-center text-gray-600">
                                    <i class="fas fa-share"></i>
                                    <span>Partager</span>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Post 2 -->
                    <div class="bg-white rounded-lg shadow-sm mb-6">
                        <div class="p-4">
                            <div class="flex items-center space-x-3 mb-4">
                                <div class="w-10 h-10 bg-gray-300 rounded-full flex items-center justify-center">
                                    <i class="fas fa-user text-gray-600"></i>
                                </div>
                                <div>
                                    <p class="font-medium">Votre Nom</p>
                                    <p class="text-sm text-gray-500">Il y a 1 jour</p>
                                </div>
                            </div>

                            <div class="mb-4">
                                <p class="text-gray-800">Merci à tous pour vos messages d'anniversaire ! 🎉🎂</p>
                            </div>
                        </div>

                        <!-- Stats -->
                        <div class="px-4 pb-2">
                            <div class="flex justify-between text-sm text-gray-500">
                                <div class="flex items-center space-x-1">
                                    <div class="w-5 h-5 bg-facebook-blue rounded-full flex items-center justify-center">
                                        <i class="fas fa-thumbs-up text-white text-xs"></i>
                                    </div>
                                    <span>156</span>
                                </div>
                                <div>
                                    <span>23 commentaires</span>
                                </div>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="border-t border-gray-200 px-4 py-2">
                            <div class="flex justify-around">
                                <button
                                    class="flex items-center space-x-2 px-4 py-2 hover:bg-gray-100 rounded-lg flex-1 justify-center text-gray-600">
                                    <i class="fas fa-thumbs-up"></i>
                                    <span>J'aime</span>
                                </button>
                                <button
                                    class="flex items-center space-x-2 px-4 py-2 hover:bg-gray-100 rounded-lg flex-1 justify-center text-gray-600">
                                    <i class="fas fa-comment"></i>
                                    <span>Commenter</span>
                                </button>
                                <button
                                    class="flex items-center space-x-2 px-4 py-2 hover:bg-gray-100 rounded-lg flex-1 justify-center text-gray-600">
                                    <i class="fas fa-share"></i>
                                    <span>Partager</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="js/main.js"></script>
</body>

</html>