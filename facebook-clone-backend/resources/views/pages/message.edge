                        <i class="fas fa-user text-white text-sm"></i>
                    </div>
                    <div class="bg-gray-100 rounded-2xl px-4 py-2 max-w-xs">
                        <p class="text-sm">On pourrait aller au cinÃ©ma ! ðŸŽ¬</p>
                    </div>
                    <p class="text-xs text-gray-500 self-end">14:38</p>
                </div>
            </div>

            <!-- Zone de saisie -->
            <div class="p-4 border-t border-gray-200">
                <div class="flex items-end space-x-3">
                    <button class="p-2 text-facebook-blue hover:bg-blue-50 rounded-full">
                        <i class="fas fa-plus"></i>
                    </button>
                    <button class="p-2 text-facebook-blue hover:bg-blue-50 rounded-full">
                        <i class="fas fa-camera"></i>
                    </button>
                    <button class="p-2 text-facebook-blue hover:bg-blue-50 rounded-full">
                        <i class="fas fa-image"></i>
                    </button>
                    <button class="p-2 text-facebook-blue hover:bg-blue-50 rounded-full">
                        <i class="fas fa-microphone"></i>
                    </button>
                    <div class="flex-1 bg-gray-100 rounded-2xl px-4 py-2 flex items-center space-x-2">
                        <input id="message-input" type="text" placeholder="Aa"
                            class="flex-1 bg-transparent focus:outline-none">
                        <button class="p-1 text-facebook-blue hover:bg-blue-50 rounded-full">
                            <i class="fas fa-smile"></i>
                        </button>
                    </div>
                    <button id="send-button" class="p-2 text-facebook-blue hover:bg-blue-50 rounded-full">
                        <i class="fas fa-paper-plane"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="js/messenger.js"></script>
</body>

</html>